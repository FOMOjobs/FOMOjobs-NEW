# Laravel API Configuration
# Backend API URL - defaults to localhost:8000 in development
VITE_API_URL=http://localhost:8000/api

# Development Mode Settings
# Set to 'true' to use mock data instead of real API calls (useful for frontend development without backend)
VITE_USE_MOCKS=false

# OpenAI API (Optional - for AI features in CV Creator)
# Add your OpenAI API key to enable AI suggestions
# Get your key from: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Feature Flags
VITE_ENABLE_AI_FEATURES=false

